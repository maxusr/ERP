{% extends "SchoolBundle:App:base.html.twig" %} {% block title %} Accueil | {{ parent() }}{% endblock %} {% block main %}
<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>Accueil</h1>
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <table class="table table-stripered table condensed">
                <thead>
                    <tr>
                        <th>Date emprunt</th>
                        <th>Date à remettre</th>
                        <th>Emprunteur</th>
                        <th>Document</th>
                    </tr>
                </thead>
                <tbody>
                    {% for borrowing in borrowings %}
                    <tr>
                        <td>{{borrowing.madeAt|date('d-m-Y')}}</td>
                        <td>{{borrowing.toReturnAt()|date('d-m-Y')}}</td>
                        <td>{{borrowing.student.longname}}<br/>{{borrowing.student.matricule~' '~borrowing.student.currentClassroom.name}}</td>
                        <td>{{borrowing.book.longname}}</td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucun emprunt dépassé</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <h4>Enregistrer un emprunt</h4>
            {{form(formBorrow)}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-stripered table condensed">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Matricule</th>
                        <th>Classe</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for student in students %}
                    <tr>
                        <td>{{student.longname}}</td>
                        <td>{{student.matricule}}</td>
                        <td>{{student.currentClassroom ? student.currentClassroom.name : 'Dans aucune classe'}}</td>
                        <td><a href="{{path('school_student', {'id': student.id})}}" class="btn btn-link btn-info"><i class="fa fa-eye"></i> Afficher</a></td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucun étudiant enregistré<br/><a href="{{path('school_student_create')}}" class="btn btn-link btn-info"><i class="fa fa-user"></i> Enregistrer un nouvel étudiant</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock main %}