{% extends "MarketBundle:App:base.html.twig" %} 
{% block title %} Affichage Vente| {{ parent() }}{% endblock %} 
{% block main %}
<div class="col-lg-12">
    <h2>
        <span class="pull-right">
			<button class="btn btn-info printer" data-print="#sale">Imprimer</button>
			<a href="{{path('market_sale_update', {'id': sale.id})}}" class="btn btn-success">Modifier</a>
			<a href="{{path('market_setting_delete', {'id': sale.id, 'type': 'sale'})}}" data-confirm-message="Voulez vous vraiment supprimer cette vente?" class="confirm btn btn-danger"><i class="fa fa-remove"></i> Supprimer</a>
		</span>
    </h2>
    <hr/>
    <div class="row">
        <div class="col-lg-12" id="sale">
            <div class="row">
                <div class="col-sm-4">
                    <div class="list-group">
                        <div class="list-group-item bg-blue">
                            <h3>Total
                                <br/><small>{{sale.total}} FCFA</small>
                            </h3>
                        </div>
                        <div class="list-group-item bg-blue">
                            <h3>Taxe
                                <br/><small>{{sale.taxe}} %</small>
                            </h3>
                        </div>
                        <div class="list-group-item">
                            <h3>Total TTC
                                <br/><small>{{sale.totalTTC}} FCFA</small>
                            </h3>
                        </div>
                        <div class="list-group-item bg-blue">
                            <h3>Montant reçu
                                <br/><small>{{sale.receive}} FCFA</small>
                            </h3>
                        </div>
                        <div class="list-group-item bg-green">
                            <h3>Payé?
                                <br/><small>{{sale.paid ? 'Oui' : 'Non'}}</small>
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                    <h3>Commandes</h3>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th data-attribute="reference">Référence</th>
                                    <th data-attribute="client">Client</th>
                                    <th data-attribute="nombre">Livraison</th>
                                    <th data-attribute="nombre">Paiement</th>
                                    <th data-attribute="nombre">Nombre Produit</th>
                                    <th data-attribute="total">Total</th>
                                    <th data-attribute="actions">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for commande in commandes %}
                                <tr>
                                    <td>{{commande.reference}}</td>
                                    <td>{{commande.client.name}}</td>
                                    <td>{{commande.billingMode}}</td>
                                    <td>{{commande.shippingMode}}</td>
                                    <td>{{commande.numberProduct}}</td>
                                    <td>{{commande.total}}</td>
                                    <td>
                                        <a href="{{path('market_commande', {id: commande.id})}}" class="btn btn-info" >Afficher</a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}