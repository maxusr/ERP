<ul class="list-group">
    {% for entity in entities %}
    <li class="list-group-item">
        <h4 class="list-group-item-title">{{entity.name~' '~entity.comparator~' '~entity.value}}
            {% if entity.service is not null %}
                <br/><small>Service: {{entity.service.name}}</small>
            {% endif %}
            {% if entity.poste is not null %}
                <br/><small>Poste: {{entity.poste.name}}</small>
            {% endif %}
        </h4>
        <div class="pull-right">
            <a href="{{path('core_setting_manage_update', {'id': entity.id, 'entity': 'poste'})}}" class="btn btn-warning btn-sm"><i class="fa fa-edit"></i> Modifier</a>
            <a href="{{path('core_setting_delete', {'id': entity.id, 'type': 'poste'})}}" data-confirm-message="Voulez-vous vraiment supprimer cette entitÃ©?" class="confirm btn btn-sm btn-danger"><i class="fa fa-remove"></i> Supprimer</a>
        </div>
        <div class="clearfix"></div>
    </li>
    {% endfor %}
</ul>